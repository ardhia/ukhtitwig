{% extends 'layout' %}
{% block title %}
    Search
{% endblock %}
{% block isi %}
		<div id="bar">
			<div class="search">
				
			</div>
			<div class="_breadcrumb">
				<!-- another version - flat style with animated hover effect -->
				<div class="breadcrumb flat">
					<a href="{{route('/')}}">Home</a>
					<a href="#" class="active">Search</a>
				</div>
			</div>
		</div>
	<div id="wrapper">
		<div class="wrap">
			<div class="content">
				<div class="cari">
					<form method="GET" action="{{route('searchAll')}}">
						<input type="text" name="keywords" placeholder="Search" class="text"></input>
						<input type="submit" name="search" value="" class="submit"></input>
					</form>
				</div>
				<div class="hasil-search">Hasil Pencarian</div>
				{% if keywords is empty %}
				    <div class="isi-notsearch">Maaf, kata yang anda cari tidak ada. Coba menggunakan kata kunci lain.</div>
				{% else %}
					{% for item in keywords %}
					<a href="{{route('artikel.isi-artikel', {No: item.No})}}"><div class="isi-search">
					    {{item.Judul|str_words (10)}}
					</div></a>
					{% endfor %}
				{% endif %}
				<div class="paginate">
					{{ keywords.render()|raw }}
				</div>
			</div>
			<div class="rightKet">
				<div id="arsip">	
					<div class="judul">Arsip</div>
					<div class="isi-arsip">
						{% include 'ArsipArtikel' %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}