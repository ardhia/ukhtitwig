{% extends 'layout' %}
{% block isi %}
		<div id="bar">
			<div class="search">
				
			</div>
			<div class="_breadcrumb">
				<!-- another version - flat style with animated hover effect -->
				<div class="breadcrumb flat">
					<a href="{{route('/')}}">Home</a>
					<a href="{{route('tutorial')}}">Tutorial</a>
					<a href="#" class="active">Search</a>
				</div>
			</div>
		</div>
	<div id="wrapper">
		<div class="wrap">
			<div class="content">
				<div class="cari">
    				<form method="get" action="{{url('tutorial/searchtutorial')}}">
    					<input type="text" name="keywords" placeholder="Search" class="text3">
    					<input type="submit" value="" class="submit1">
    				</form>
				</div>
				<div class="hasil-search">Hasil Pencarian</div>
				{% for item in keywords %}
					<div class="isi-search">
					    {{ item.Judul_Tutorial }}
					</div>
				{% endfor %}
				<div class="paginate">
					{{ tutorial.render()|raw }}
				</div>
			</div>
			<div class="rightKet">
				<div id="arsip">	
					<div class="judul">Arsip</div>
					<div class="isi-arsip">
						{% include 'ArsipTutorial' %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}