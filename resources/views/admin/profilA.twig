</head>
<body>
	<div id="navuser">
		<ul class="nav nav-tabs" role="tablist">
			<li role="presentation" class="active">
				<a href="#tableArtikel" aria-controls="tableArtikel" role="tab" data-toggle="tab">Artikel</a>
			</li>
			<li role="presentation">
				<a href="#tableTutorial" aria-controls="tableTutorial" role="tab" data-toggle="tab">Tutorial</a>
			</li>
			<li role="presentation">
				<a href="#tableToko" aria-controls="tableToko" role="tab" data-toggle="tab">Toko</a>
			</li>
			<li role="presentation">
				<a href="#tableSubscribe" aria-controls="tableSubscribe" role="tab" data-toggle="tab">Subscribe</a>
			</li>
		</ul>
	</div>
		<div class="out-profil">
			<div class="tab-content">
				<div role="tabpanel" class="tab-pane active" id="tableArtikel">
					<div id="wrapper">
					<div class="scroll">
						<table border="1">
							<tr>
								<th>No</th>
								<th>Creator</th>
								<th>Judul Artikel</th>
								<th>Photo</th>
								<th>Isi Artikel</th>
								<th>Action</th>
							</tr>
							{% for table in artikel %}
							<tr>
								<td>{{table.No}}</td>
								<td>{{table.email}}</td>
								<td>{{table.Judul_Artikel}}</td>
								<td>{{table.Photo}}</td>
								<td>{{table.Isi_Artikel|raw }}</td>
								<td>
								<a href="{{route('editAdmin', {No: table.No})}}"><button value="Edit" id="edit" >Edit</button></a>
								<button value="Delete" class="ced">Delete</button></td>
							</tr>
							{% endfor %}
						</table>
					</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="tableTutorial">
					<div id="wrapper">
					<div class="scroll">
						<table border="1">
							<tr>
								<th>No</th>
								<th>Creator</th>
								<th>Judul Tutorial</th>
								<th>Isi Tutorial</th>
								<th>Action</th>
							</tr>
							{% for table in tutorial %}
							<tr>
								<td>{{table.No}}</td>
								<td>{{table.email}}</td>
								<td>{{table.Judul_Tutorial}}</td>
								<td>
								{{table.Isi_Tutorial|raw }}
								</td>
								<td>
								<a href="{{route('editAdmintutor', {No: table.No})}}"><button value="Edit" class="edit1">Edit</button></a>
								<button value="Delete" class="ced">Delete</button></td>
							</tr>
							{% endfor %}
						</table>
					</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="tableToko">
					<div id="wrapper">
					<div class="scroll">
						<table border="1">
							<tr>
								<th>No</th>
								<th>Creator</th>
								<th>Judul Toko</th>
								<th>Harga</th>
								<th>Jenis Barang</th>
								<th>Keterangan Barang</th>
								<th>Action</th>
							</tr>
							{% for table in tutorial %}
							<tr>
								<td>{{table.idToko}}</td>
								<td>{{table.email}}</td>
								<td>{{table.judulToko}}</td>
								<td>{{table.harga}}</td>
								<td>{{table.jb|raw }}</td>
								<td>{{table.ketToko|raw }}</td>
								<td>
								<a href="{{route('editAdminToko', {No: table.idToko})}}"><button value="Edit" class="tk1">Edit</button></a>
								<button value="Delete" class="tk">Delete</button></td>
							</tr>
							{% endfor %}
						</table>
					</div>
					</div>
				</div>
				<div role="tabpanel" class="tab-pane" id="tableSubscribe">
					<div id="wrapper">
					<div class="scroll">
						<table border="1">
							<tr>
								<th>No</th>
								<th>Email</th>
								<th>Action</th>
							</tr>
							{% for table in subscribe %}
							<tr>
								<td>{{table.Id}}</td>
								<td>{{table.email}}</td>
								<td>
								<button value="Edit" class="subs1">Edit</button>
								<button value="Delete" class="subs">Delete</button></td>
							</tr>
							{% endfor %}
						</table>
					</div>
					</div>
				</div>
