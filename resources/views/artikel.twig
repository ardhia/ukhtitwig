{% extends 'layout' %}
{% block title %}
    Artikel
{% endblock %}
{% block isi %}
		<div id="bar">
			<div class="search">
				{% include 'formSearchArtikel' %}
			</div>
			<div class="_breadcrumb">
				<!-- another version - flat style with animated hover effect -->
				<div class="breadcrumb flat">
					<a href="{{route('/')}}">Home</a>
					<a href="#" class="active">Artikel</a>
				</div>
			</div>
		</div>
		<div id="wrapper">
			<div class="wrap">
				<div class="content">
					{% for isi in artikel %}
						<div id="artikel">
							<a href="{{route('artikel.isi-artikel', {No: isi.No})}}">
								<div class="judul-artikel">
									{{isi.Judul}}
								</div>
							</a>
							<div class="out-artikel">
								<div id="photo-artikel"><img src="/uploadPhoto/artikel/{{isi.Photo}}" width="100%" height="100%"></div>
								<div id="artikelnya"> 
									{% autoescape %}
									{{isi.Isi|str_words(50)|raw }}
									{% endautoescape %}
								</div>
								<div id="authorDate">by. <a href="{{route('profilU', {id: isi.user_id})}}">{{isi.user_name}}</a> at {{isi.created_at}}</div>
							</div>
						</div>
					{% endfor %}
					<div class="paginate">{{ artikel.render()|raw }}</div>
				</div>
				<div class="rightKet">
					<div id="arsip">
						<div class="judul">Arsip</div>
						<div class="isi-arsip">
							{% include 'ArsipArtikel' %}
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}