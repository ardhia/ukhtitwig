{% extends 'layout' %}
{% block isi %}
		<div id="bar">
			<div class="search">
				{% include 'formSearchTutorial' %}
			</div>
			<div class="_breadcrumb">
				<!-- another version - flat style with animated hover effect -->
				<div class="breadcrumb flat">
					<a href="{{route('/')}}">Home</a>
					<a href="#" class="active">Tutorial</a>
				</div>
			</div>
		</div>
		<div id="wrapper">
			<div class="wrap">
				<div class="content">
					{% for isi in tutorial %}
						<div id="artikel">
							<a href="{{route('tutorial.isi-tutorial', {No: isi.No})}}">
								<div class="judul-artikel">
									{{isi.Judul_Tutorial}} by. {{isi.user_name}}
								</div>
							</a>
							<div class="out-artikel">
								<div id="photo-artikel"><img src="/uploadPhoto/tutorial/{{isi.Photo}}" width="100%" height="100%"></div>
								<div id="artikelnya"> 
									{% autoescape %}
									{{isi.Isi_Tutorial|str_words(50)|raw }}
									{% endautoescape %}
								</div>
							</div>
						</div>
					{% endfor %}
					<div class="paginate">
						{{ tutorial.render()|raw }}
					</div>
				</div>
				<div class="rightKet">
					<div class="judul">Keterangan</div>
					<div class="isi-ket"> Assalamualaikum Ukhti ^^ Laman ini berisi berbagai macam tutorial. Semoga Bermanfaat^^</div>
				</div>
				<div class="rightKet">
					<div id="arsip">	
						<div class="judul">Arsip</div>
						<div class="isi-arsip">
							{% include 'ArsipTutorial' %}
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}