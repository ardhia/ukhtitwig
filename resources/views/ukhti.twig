{% extends 'layout' %}
{% block title %}
    Ukhti
{% endblock %}
{% block isi %}
		<div id="bar">
			<div class="search">
				<form method="GET" action="{{route('searchAll')}}">
					<input type="text" name="keywords" placeholder="Search" class="text"></input>
					<input type="submit" name="search" value="" class="submit"></input>
				</form>
			</div>
			<div class="_breadcrumb">
				<!-- another version - flat style with animated hover effect -->
				<div class="breadcrumb flat">
					<a href="#" class="active">Home</a>
				</div>
			</div>
		</div>
		<div id="wrapper">
			<div class="wrap">
				<div class="content">
					<div id="js">
						<div class="slider-wrapper theme-default">
							<div id="slider" class="nivoSlider">
								{% for item in artikel %}
									<a href="{{route('artikel.isi-artikel', {No: item.No})}}"><img src="/uploadPhoto/artikel/{{item.Photo}}" width="100%" height="100%"></a>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
				<div class="rightKet">
					<div id="arsip">
						<div class="judul">Arsip</div>
						<div class="isi-arsip">
							{% include 'ArsipAll' %}
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}